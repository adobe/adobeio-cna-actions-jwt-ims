{
  "name": "actions-jwt-ims",
  "version": "0.1.0",
  "description": "",
  "main": "./src/auth.js",
  "scripts": {
    "postinstall": "",
    "prepublish": "browserify -r ${npm_package_main}:main-action --node > ${npm_package_name}-${npm_package_version}.js && npm run remove_pkginfo && npm run whisk_wrapper",
    "posttest": "eslint src",
    "test": "npm run unit-tests",
    "unit-tests": "jest --ci",
    "remove_pkginfo": "replace '^require.*pkginfo' '// removed pkginfo ...' -r ${npm_package_name}-${npm_package_version}.js",
    "whisk_wrapper": "echo \"var main = require('main-action').default;\" >> ${npm_package_name}-${npm_package_version}.js"
  },
  "dependencies": {
    "@adobe/jwt-auth": "^0.0.5",
    "encoding": "^0.1.12"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.16.0",
    "babel-preset-babili": "0.0.9",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-watch": "^2.0.2",
    "babelify": "^7.3.0",
    "body-parser": "^1.15.2",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "cls-bluebird": "^2.0.1",
    "compression": "^1.6.2",
    "cors": "^2.7.1",
    "eslint": "^4",
    "eslint-plugin-jest": "^22.1.2",
    "express": "^4.14.0",
    "http-status": "^0.2.3",
    "isparta": "^4.0.0",
    "istanbul": "^0.3.17",
    "jest": "^23.0.1",
    "jest-junit": "^5.0.0",
    "mocha": "^2.5.3",
    "nock": "^9.0.2",
    "replace": "^0.3.0",
    "request": "^2.79.0",
    "resource-router-middleware": "^0.6.0",
    "supertest": "^1.1.0",
    "supertest-as-promised": "^2.0.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "<rootDir>/tests/fixtures/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/tests/fixtures/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./jest.setup.js"
  }
}
